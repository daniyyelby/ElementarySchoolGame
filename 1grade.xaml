				<DropShadowEffect/>
			</Button.Effect>
			<Button.Background>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="Black" Offset="0"/>
					<GradientStop Color="#FFF5D50B" Offset="1"/>
				</LinearGradientBrush>
			</Button.Background>
			<Button.BorderBrush>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="Black" Offset="0"/>
					<GradientStop Color="White" Offset="1"/>
				</LinearGradientBrush>
			</Button.BorderBrush>
			<TextBlock Text="Reading" FontFamily="Ink Free" FontSize="32" Width="148">

			</TextBlock>

		</Button>
		<Button x:Name="gradeSubject2" HorizontalAlignment="Right" Height="66" VerticalAlignment="Bottom" Width="337" Margin="0,0,447,455" Foreground="White" OpacityMask="#FFB22020" Click="GradeSubject2_Click" >
			<Button.Effect>
				<DropShadowEffect/>
			</Button.Effect>
			<Button.Background>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="Black" Offset="0"/>
					<GradientStop Color="#FFF5D50B" Offset="1"/>
				</LinearGradientBrush>
			</Button.Background>
			<Button.BorderBrush>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="Black" Offset="0"/>
					<GradientStop Color="White" Offset="1"/>
				</LinearGradientBrush>
			</Button.BorderBrush>
			<TextBlock Text="Math" FontFamily="Ink Free" FontSize="32" Width="148">

			</TextBlock>
		</Button>
		<TextBlock HorizontalAlignment="Left" Height="103" Margin="26,549,0,0" TextWrapping="Wrap" Text="1st grade" VerticalAlignment="Top" Width="100" Foreground="#FF81096C" FontFamily="Papyrus" FontSize="36" FontWeight="Bold"/>


	</Grid>
