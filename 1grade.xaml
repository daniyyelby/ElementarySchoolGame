      xmlns:local="clr-namespace:WPFAppFirstTry"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="_1grade" Height="800" Width="1200" Foreground="#FFEC3C3C" Background="#FFE0D608" >

	<Grid RenderTransformOrigin="0.531,0.129">
