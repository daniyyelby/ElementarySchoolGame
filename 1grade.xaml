			<TextBlock.Effect>
				<DropShadowEffect/>
			</TextBlock.Effect>
			<TextBlock.Foreground>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="Black" Offset="0"/>
					<GradientStop Color="#FF48613A" Offset="1"/>
				</LinearGradientBrush>
			</TextBlock.Foreground>
		</TextBlock>

		<Button x:Name="gradeSubject1" HorizontalAlignment="Right" Height="66" VerticalAlignment="Bottom" Width="337" Margin="0,0,447,297" Foreground="White" OpacityMask="#FFB22020" Click="GradeSubject1_Click">
